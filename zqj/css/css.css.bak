@charset "utf-8";
/* CSS Document */

header {
	background-color: #09F;
	height: 200px;
}
.wrap{
	width:1000px;
	margin:0 auto;
		line-height: 25px;
	text-indent: 24px;
	mso-char-indent-count: 2.0000;
	mso-line-height-rule: exactly;	
	border: 1px solid #e9e9e9;
	}
	
	
nav{
    background-image: url(../img/zqj.png);
    background-repeat: no-repeat;
     height: 200px;
   
}	
nav ul li{
	    float: right;
    width: 100px;
    text-align: center;
    margin: 82px 28px 0 0px;
    display: block;
	}
nav ul li a{
	color:#fff;
	height:55px;
	line-height:55px;
	}	
nav ul li:hover {
	background: #fff;
	
}	
nav ul li:hover a{
	color:#000;
	text-decoration: none;
	font-size: 20px;
}		


.footer{
	
	margin:10px 0;
	height: 100px;
	width:100%;
    background-color: #09F;	
	}

.copyright{
	width:1000px;
	margin:0 auto;
	}	
.copyright h2{
	text-align: center;
	line-height:80px;
	color:#fff;	
	}
.copyright p{color:#fff; line-height: 76px;}		
.copyright ul li{
	float: left;
    text-align: center;
    margin: 27px 15px;
    display: block;
	}	
.copyright ul li a{color:#fff;}	
.copyright ul li a:hover{
	color:#fbea8a;
	}	
.zq_pic01{
	float: right;
    border: 1px solid #ccc;
    padding: 5px;
    margin: 0 15px;
	}
.zq_pic01 img{
	float: left;
    padding: 0 3px;
	
	}	